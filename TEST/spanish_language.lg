// -- TYPES

SPANISH_LANGUAGE : LANGUAGE

    // -- CONSTANTS

    "French"
        "Francés"

    "English"
        "Inglés"

    "Poem"
        "La mariposa es una cosa para contemplar,\n"
        "Con colores más hermosos que el oro.\n"
        "Que me gusta tu belleza, mariposa,\n"
        "Mientras me siento y te veo revolotear."

    // -- INQUIRIES

    MainMenu
        "Menú principal"

    :Helmets #count
        if count <= 1
            "yelmo"
        else
            "yelmos"
        *result = count
        &result = male

    :Swords :count
        if #count <= 1
            "espada"
        else
            "espadas"
        *result = *count
        &result = female

    TheItems :items
        if #items = 0
            if &items = female
                "Ninguna "
            else
                "Ningún "
        else if #items = 1
            if &items = female
                "La "
            else
                "El "
        else
            if &items = female
                "Las "
            else
                "Los "
            *items
            " "
        items

    Have :items
        if #items <= 1
            " ha"
        else
            " han"

    BeenFound :items
        " sido encontrad"
        if &items = female
            "a"
        else
            "o"
        if #items > 1
            "s"

    TheItemsHaveBeenFound :items
        TheItems( items )
        Have( items )
        BeenFound( items )
        ".\n"
