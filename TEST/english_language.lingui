ENGLISH_LANGUAGE : LANGUAGE

    "English"
        "English"

    "French"
        "French"

    MainMenu
        "Main menu"

    :Chests #count
        if count = 1
            "chest"
        else
            "chests"
        *result = count

    :Swords :count
        if @count = one
            "sword"
        else
            "swords"
        *result = *count

    TheItems :items
        if #items = 0
            "No "
        elseif #items = 1
            "The "
        else
            "The "
            *items
            " "
        items

    TheItemsHaveBeenFound :items
        TheItems( items )
        if #items = 1
            " has"
        else
            " have"
        " been found.\n"
