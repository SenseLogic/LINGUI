// -- TYPES

ENGLISH_LANGUAGE : LANGUAGE

    // -- CONSTANTS

    "Language:"
        "Language:"

    "English"
        "English"

    "French"
        "French"

    "Spanish"
        "Spanish"

    "Haiku"
        "Evening light,\nthe blue transparency\nof a dragonfly."

    "Poem"
        "The butterfly is a thing to behold,\n"
        "with colors more beautiful than gold.\n"
        "How I enjoy your beauty, butterfly,\n"
        "as I sit and watch you flutter by."

    // -- INQUIRIES

    MainMenu
        "Main menu"

    :Helmets #count
        if count = 1
            "helmet"
        else
            "helmets"
        *result = count

    :Swords :count
        if @count = one
            "sword"
        else
            "swords"
        *result = *count

    TheItems :items
        if #items = 0
            "No "
        else if #items = 1
            "The "
        else
            "The "
            *items
            " "
        items

    TheItemsHaveBeenFound :items
        TheItems( items )
        if #items = 1
            " has"
        else
            " have"
        " been found.\n"
